<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.carloskowalevicz.pokemon.registro">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Registro"
        android:id="@+id/button"
        android:layout_marginBottom="95dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onreg"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pnombre"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Nombre"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ptipo"
        android:layout_below="@+id/pnombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Tipo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pelemento"
        android:layout_below="@+id/ptipo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Elemento"
        android:layout_alignRight="@+id/ptipo"
        android:layout_alignEnd="@+id/ptipo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pusername"
        android:layout_below="@+id/pelemento"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="username"
        android:layout_alignRight="@+id/pelemento"
        android:layout_alignEnd="@+id/pelemento" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ppassword"
        android:layout_below="@+id/pusername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="password"
        android:layout_alignRight="@+id/pusername"
        android:layout_alignEnd="@+id/pusername" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ppassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="IP del server"
        android:id="@+id/ip" />

    />

</RelativeLayout>
